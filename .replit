modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "geckodriver", "glibcLocales", "sqlite"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Real Football Champion"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Real Football Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auto Bet Logger"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Result Verifier"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Tips Bot"

[[workflows.workflow]]
name = "install_dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add plotly"

[[workflows.workflow]]
name = "Real Football Champion"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python real_football_champion.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Real Football Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_dashboard.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Auto Bet Logger"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python auto_bet_logger.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Result Verifier"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 schedule_verification.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Telegram Tips Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 telegram_bot.py"

[workflows.workflow.metadata]
outputType = "console"

