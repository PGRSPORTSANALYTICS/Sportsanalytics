modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "chromedriver", "chromium", "ffmpeg-full", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "railway", "sqlite", "tcl", "tk", "xcodebuild", "xsimd", "zlib"]

[deployment]
deploymentTarget = "vm"
run = ["python3", "combined_sports_runner.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Real Football Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Combined Sports Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "College Basketball Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PGR API Server"

[[workflows.workflow]]
name = "Real Football Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run pgr_dashboard.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Combined Sports Engine"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 combined_sports_runner.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "College Basketball Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run college_basket_dashboard.py --server.port=6000 --server.address=0.0.0.0 --server.headless=true"
waitForPort = 6000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "PGR API Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m uvicorn api:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6000
externalPort = 6000

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
integrations = ["web_scraper:1.0.0"]
