modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "geckodriver", "glibcLocales", "libxcrypt", "pkg-config", "sqlite", "xcodebuild", "xsimd", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Real Football Dashboard"

